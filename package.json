{
  "name": "3dpc",
  "version": "1.0.0",
  "description": "3DPC (3D Print Calculator)",
  "main": "main.js",
  "author": "CROSS Graphics",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.crossgraphics.3dpc",
    "productName": "3DPC",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache/**"
    ],
    "win": {
      "icon": "assets/icons/app.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^26.4.0"
  }
}
